{
    "policy": [
        {
            "Action": [
                "ec2:CreateRestoreImageTask"
            ],
            "Effect": "Allow",
            "Resource": [
                "arn:aws:ec2:{region}::{account_id}:image/*"
            ]
        },
        {
            "Action": [
                "s3:GetObject"
            ],
            "Effect": "Allow",
            "Resource": [
                "arn:aws:s3:::{bucket_name}/{object_key}"
            ]
        },
        {
            "Action": [
                "ebs:CompleteSnapshot"
            ],
            "Effect": "Allow",
            "Resource": [
                "arn:aws:ec2:{region}::{account_id}:snapshot/*"
            ]
        },
        {
            "Action": [
                "ebs:StartSnapshot"
            ],
            "Effect": "Allow",
            "Resource": [
                "arn:aws:ec2:{region}::{account_id}:snapshot/*"
            ]
        },
        {
            "Action": [
                "ebs:PutSnapshotBlock"
            ],
            "Effect": "Allow",
            "Resource": [
                "arn:aws:ec2:{region}::{account_id}:snapshot/*"
            ]
        },
        {
            "Action": [
                "ec2:CreateTags"
            ],
            "Effect": "Allow",
            "Resource": [
                "arn:aws:ec2:{region}::{account_id}:image/*"
            ]
        }
    ]
}
