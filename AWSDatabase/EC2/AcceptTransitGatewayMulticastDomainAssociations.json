{
    "policy": [
        {
            "Action": [
                "ec2:AcceptTransitGatewayMulticastDomainAssociations"
            ],
            "Effect": "Allow",
            "Resource": [
                "arn:aws:ec2:{region}:{account_id}:transit-gateway-multicast-domain/{multicast_domain_id}",
                "arn:aws:ec2:{region}:{account_id}:subnet/{subnet_id}",
                "arn:aws:ec2:{region}:{account_id}:vpc/{vpc_id}"
            ]
        }
    ]
}