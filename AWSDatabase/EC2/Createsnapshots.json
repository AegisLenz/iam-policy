{
    "policy": [
        {
            "Action": [
                "ec2:CreateSnapshots"
            ],
            "Effect": "Allow",
            "Resource": [
                "arn:aws:ec2:{region}:{account_id}:instance/{instance_id}",
                "arn:aws:ec2:{region}:{account_id}:volume/{volume_id}",
                "arn:aws:ec2:{region}:{account_id}:snapshot/*"
            ]
        },
        {
            "Action": [
                "ec2:CreateTags"
            ],
            "Effect": "Allow",
            "Resource": [
                "arn:aws:ec2:{region}:{account_id}:dedicated-host/*",
                "arn:aws:ec2:{region}:{account_id}:instance/*",
                "arn:aws:ec2:{region}:{account_id}:transit-gateway-attachment/*",
                "arn:aws:ec2:{region}:{account_id}:vpc-flow-log/*",
                "arn:aws:ec2:{region}:{account_id}:vpc-peering-connection/*",
                "arn:aws:ec2:{region}:{account_id}:launch-template/*",
                "arn:aws:ec2:{region}:{account_id}:route-table/*",
                "arn:aws:ec2:{region}:{account_id}:subnet/*",
                "arn:aws:ec2:{region}:{account_id}:security-group/*",
                "arn:aws:ec2:{region}:{account_id}:elastic-ip/*",
                "arn:aws:ec2:{region}:{account_id}:natgateway/*",
                "arn:aws:ec2:{region}:{account_id}:placement-group/*",
                "arn:aws:ec2:{region}:{account_id}:traffic-mirror-filter/*",
                "arn:aws:ec2:{region}:{account_id}:client-vpn-endpoint/*",
                "arn:aws:ec2:{region}:{account_id}:local-gateway/*",
                "arn:aws:ec2:{region}:{account_id}:reserved-instances/*",
                "arn:aws:ec2:{region}:{account_id}:image/*",
                "arn:aws:ec2:{region}:{account_id}:volume/*"
            ]
        }
    ]
}
