{
    "policy": [
        {
            "Action": [
                "ec2:AssociateAddress"
            ],
            "Effect": "Allow",
            "Resource": [
                "arn:aws:ec2:{region}:{account_id}:network-interface/*",
                "arn:aws:ec2:{region}:{account_id}:instance/{instance_id}",
                "arn:aws:ec2:{region}:{account_id}:elastic-ip/{allocation_id}"
            ]
        }
    ]
}