{
    "policy": [
        {
            "Action": [
                "ec2:ModifyInstancePlacement"
            ],
            "Effect": "Allow",
            "Resource": [
                "arn:aws:ec2:{region}:{account_id}:placement-group/*",
                "arn:aws:ec2:{region}:{account_id}:instance/*",
                "arn:aws:ec2:{region}:{account_id}:dedicated-host/{dedicated_host_id}"
            ]
        }
    ]
}