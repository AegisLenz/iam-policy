{
    "policy": [
        {
            "Action": [
                "ec2:ModifyVpnConnection"
            ],
            "Effect": "Allow",
            "Resource": [
                "arn:aws:ec2:{region}:{account_id}:vpn_gateway/{vpn_gateway_id}",
                "arn:aws:ec2:{region}:{account_id}:customer-gateway/*",
                "arn:aws:ec2:{region}:{account_id}:vpn-connection/*",
                "arn:aws:ec2:{region}:{account_id}:transit-gateway/*"
            ]
        }
    ]
}