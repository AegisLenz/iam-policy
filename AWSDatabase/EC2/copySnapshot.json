{
    "policy": [
        {
            "Action": [
                "ec2:CopySnapshot"
            ],
            "Effect": "Allow",
            "Resource": [
                "arn:aws:ec2:{region}::snapshot/*"
            ]
        },
        {
            "Action": [
                "ec2:CreateTags"
            ],
            "Effect": "Allow",
            "Resource": [
                "*"
            ]
        }
    ]
}