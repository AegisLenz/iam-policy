{
    "policy": [
        {
            "Action": [
                "ec2:CreateVpnConnection"
            ],
            "Effect": "Allow",
            "Resource": [
                "arn:aws:ec2:{region}:{account_id}:customer-gateway/{customer_gateway_id}",
